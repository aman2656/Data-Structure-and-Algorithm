class Solution:
    # @param A : list of integers
    # @return an integer
    def solve(self, A):
        P = [0]*len(A)
        P[0] = A[0]
        if P[len(A)-1] == P[0]:
            return 0
        for i in range(1, len(A)):
            P[i] = P[i-1] + A[i]
        for i in range(1, len(A)-1):
            if P[i-1] == (P[len(A)-1] - P[i]):
                return i
        if P[len(A)-1] + P[len(A)-2] == 0:
            return len(A)-1
        return -1
